# ============================================================================
# PAYMENT PROCESSOR CONFIGURATION
# Copy to .env and fill in your credentials
# ============================================================================

# ----------------------------------------------------------------------------
# M-PESA (Kenya, Tanzania, Uganda, Rwanda)
# ----------------------------------------------------------------------------
# Get credentials from: https://developer.safaricom.co.ke
MPESA_CONSUMER_KEY=your_consumer_key_here
MPESA_CONSUMER_SECRET=your_consumer_secret_here
MPESA_BUSINESS_SHORT_CODE=174379  # Your Paybill/Till number
MPESA_PASSKEY=your_lipa_na_mpesa_passkey_here
MPESA_ENVIRONMENT=sandbox  # or 'production'
MPESA_CALLBACK_URL=https://yourdomain.com/api/v1/webhooks/mpesa
MPESA_TIMEOUT_URL=https://yourdomain.com/api/v1/webhooks/mpesa/timeout
MPESA_INITIATOR_NAME=apiuser
MPESA_SECURITY_CREDENTIAL=your_encrypted_security_credential_here

# ----------------------------------------------------------------------------
# STRIPE (Credit/Debit Cards)
# ----------------------------------------------------------------------------
# Get credentials from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...  # Use sk_live_... for production
STRIPE_PUBLISHABLE_KEY=pk_test_...  # Use pk_live_... for production
STRIPE_WEBHOOK_SECRET=whsec_...  # From Stripe webhook settings

# ----------------------------------------------------------------------------
# PAYPAL (PayPal Payments)
# ----------------------------------------------------------------------------
# Get credentials from: https://developer.paypal.com/dashboard/
PAYPAL_CLIENT_ID=your_client_id_here
PAYPAL_CLIENT_SECRET=your_client_secret_here
PAYPAL_ENVIRONMENT=sandbox  # or 'production'
PAYPAL_WEBHOOK_ID=your_webhook_id_here
PAYPAL_RETURN_URL=https://yourdomain.com/funding/success
PAYPAL_CANCEL_URL=https://yourdomain.com/funding/cancelled

# ----------------------------------------------------------------------------
# CRYPTOCURRENCY (Bitcoin, Ethereum)
# ----------------------------------------------------------------------------
# SECURITY WARNING: Never commit actual private keys to version control!
# Use encryption and secure key management in production

# Deposit addresses (where customers send crypto)
CRYPTO_BTC_DEPOSIT_ADDRESS=your_btc_address_here
CRYPTO_ETH_DEPOSIT_ADDRESS=0x_your_eth_address_here

# Hot wallet private keys (for withdrawals) - ENCRYPT THESE IN PRODUCTION!
CRYPTO_BTC_HOT_WALLET_KEY=encrypted_private_key_here
CRYPTO_ETH_HOT_WALLET_KEY=encrypted_private_key_here

# Blockchain configuration
CRYPTO_CONFIRMATIONS_REQUIRED=3  # BTC: 3-6, ETH: 12-35 recommended
ETHERSCAN_API_KEY=your_etherscan_api_key_here  # Get from etherscan.io
CRYPTO_BTC_NODE_URL=  # Optional: Your own Bitcoin node RPC URL
CRYPTO_ETH_NODE_URL=https://mainnet.infura.io/v3/YOUR_KEY  # Or use Alchemy

# ----------------------------------------------------------------------------
# GENERAL PAYMENT SETTINGS
# ----------------------------------------------------------------------------
PAYMENT_FEE_MULTIPLIER=1.0  # Adjust fees globally (1.0 = no adjustment)
PAYMENT_MIN_DEPOSIT=10.00  # Minimum deposit amount in USD
PAYMENT_MAX_DEPOSIT=50000.00  # Maximum deposit amount in USD
PAYMENT_MIN_WITHDRAWAL=10.00  # Minimum withdrawal amount in USD
PAYMENT_MAX_WITHDRAWAL=50000.00  # Maximum withdrawal amount in USD
